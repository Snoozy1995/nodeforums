              a.item(href='#') Link Three
              a.item(href='#') Link Four
          .three.wide.column
            h4.ui.inverted.header Group 3
            .ui.inverted.link.list
              a.item(href='#') Link One
              a.item(href='#') Link Two
              a.item(href='#') Link Three
              a.item(href='#') Link Four
          .seven.wide.column
            h4.ui.inverted.header Statistics
            .ui.statistics.three
              .ui.inverted.statistic
                .value
                  | 4
